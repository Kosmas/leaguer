<% title(@team.name, "Teams")  %>
<h2><%= @team.name %></h2>
<p>
  Seasons:
  <%= @team.seasons.map(&:description).join(', ') %>
</p>

<%= link_to "Edit Team", edit_team_path(@team) %>
<%= link_to "Delete Team", team_path(@team), method: :delete, data: { confirm: "Are you sure you want to delete this team?" } %>
<%= link_to 'New Player', new_team_player_path(@team) %>

<ul id='players'>
  <% @team.players.each do |player| %>
    <li>
      #<%= player.id %> - <%= link_to player.surname, [@team, player] %>
    </li>
  <% end %>
</ul>
